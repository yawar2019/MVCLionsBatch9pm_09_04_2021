@model CodeFirstApproach.Models.EmployeeModel
@{
    ViewBag.Title = "Edit";
}

<h2>Edit</h2>


<form action="~/Home/Edit" method="post" class="form-inline">
    <input type="hidden" name="EmpId" value="@Model.EmpId" />
    <div>
        <label>EmpName</label>
        <input type="text" name="EmpName" class="form-control"  value="@Model.EmpName" />
    </div>
    <div>
        <label>EmpSalary</label>
        <input type="text" name="EmpSalary"   class="form-control"  value="@Model.EmpSalary" />
    </div>
    <div>

        <input type="submit" value="Save" class="btn btn-primary" />
    </div>
</form>